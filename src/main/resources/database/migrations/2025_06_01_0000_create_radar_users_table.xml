<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_radar_users_table" author="h5radar">
        <createTable tableName="radar_users" remarks="Holds information about radar_users.">
            <column name="id" type="${type.bigint}" remarks="Radar user id, primary key." autoIncrement="true"
                    generationType="ALWAYS">
                <constraints primaryKey="true" primaryKeyName="pk_radar_users_id" nullable="false"/>
            </column>
            <column name="sub" type="${radar_users.type.sub}" remarks="radar user subject, unique.">
                <constraints unique="true" uniqueConstraintName="uc_radar_users_sub" nullable="false"/>
            </column>
            <column name="username" type="${radar_users.type.username}" remarks="radar user name, unique.">
                <constraints unique="true" uniqueConstraintName="uc_radar_users_username" nullable="false"/>
            </column>
            <column name="created_by" type="${type.user}" remarks="User who created the record.">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="${type.datetime}" defaultValueComputed="${function.now}" remarks="When record was created.">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="${type.user}" remarks="User who modified the record.">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_at" type="${type.datetime}" remarks="When record was modified."
                    defaultValueComputed="${function.now}">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <!-- current Liquibase ignores checkConstraint attribute -->
        <sql>
            ALTER TABLE radar_users
                ADD CONSTRAINT ck_radar_users_sub_trim CHECK (trim(sub) = sub)
        </sql>
        <sql>
            ALTER TABLE radar_users
                ADD CONSTRAINT ck_radar_users_username_trim CHECK (trim(username) = username)
        </sql>
    </changeSet>
</databaseChangeLog>
