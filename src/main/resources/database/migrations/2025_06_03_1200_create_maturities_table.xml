<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_maturities_table" author="h5radar">
        <createTable tableName="maturities" remarks="Holds information about maturities.">
            <column name="id" type="${type.bigint}" remarks="Maturity id, primary key." autoIncrement="true"
                    generationType="ALWAYS">
                <constraints primaryKey="true" primaryKeyName="pk_maturities_id" nullable="false"/>
            </column>
            <column name="radar_user_id" type="${type.bigint}" remarks="Reference to radar user.">
                <constraints nullable="false" foreignKeyName="fk_maturities_radar_user_id_2_radar_users" references="radar_users(id)"/>
            </column>
            <column name="title" type="${type.title}" remarks="Maturity title.">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="${type.description}" remarks="Description for maturity."/>
            <column name="position" type="${type.integer}"
                    remarks="Represents ring position in radar starting from lower to higher value.">
                <constraints nullable="false"/>
            </column>
            <column name="color" type="${maturities.type.color}" remarks="Ring color.">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="${type.user}" remarks="User who created the record.">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="${type.datetime}" defaultValueComputed="${function.now}" remarks="When record was created.">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="${type.user}" remarks="User who modified the record.">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="${type.datetime}" remarks="When record was modified."
                    defaultValueComputed="${function.now}">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint columnNames="radar_user_id, title"
                             constraintName="uc_maturities_radar_user_id_title"
                             tableName="maturities"
                             validate="true"/>
        <!-- current Liquibase ignores checkConstraint attribute -->
        <sql>
            ALTER TABLE maturities
                ADD CONSTRAINT ck_maturities_title_trim CHECK (trim(title) = title)
        </sql>
    </changeSet>
</databaseChangeLog>
